<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 「未登録ユーザー向け」セクションヘッダー -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/flarenote_unregistered_user"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- 通常登録フォーム -->
    <EditText
        android:id="@+id/playerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/flarenote_input_user_name"
        android:imeOptions="actionDone|flagNoEnterAction"
        android:inputType="text"
        android:maxLength="9"
        android:maxLines="1"
        android:selectAllOnFocus="true" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/flarenote_register_button" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginVertical="16dp" />

    <!-- Google登録セクション -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/flarenote_google_linked_user"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/googleLoginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/flarenote_login_with_google"
        android:drawableStart="@drawable/ic_google"
        android:paddingStart="16dp"
        android:background="#4285F4"
        android:textColor="#FFFFFF" />

    <!-- メッセージ表示エリア -->
    <TextView
        android:id="@+id/messageTextUnregistered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="4dp"
        android:padding="16dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginVertical="16dp" />

    <!-- FlareNoteトップへのリンク -->
    <Button
        android:id="@+id/goToFlareNoteTopUnregistered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/flarenote_top" />
</LinearLayout>