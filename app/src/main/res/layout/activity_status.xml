			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="Enjoy Level"
			            android:layout_marginRight="10dp"
			            android:textColor="#ffcccccc"
			            android:textAppearance="?android:attr/textAppearance" />
	
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text=":"
			            android:layout_marginRight="10dp"
			            android:textColor="#ffcccccc"
			            android:textAppearance="?android:attr/textAppearance" />
			        
