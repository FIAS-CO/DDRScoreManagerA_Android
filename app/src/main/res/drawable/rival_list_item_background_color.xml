<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">  
    
    <item android:state_selected="false"
        android:state_pressed="false"
        android:drawable="@color/black" >
    	<shape
    		android:shape="rectangle">
            <gradient
                android:type="linear"
                android:centerX="0.5"
                android:centerY="0.3"
                android:startColor="@color/gray"
                android:centerColor="@color/darkgray"
                android:endColor="@color/midnightgray"
                android:gradientRadius="10"
                android:angle="270" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>  
    
    <item android:state_selected="true"
        android:state_pressed="false"
        android:drawable="@color/black" >
    	<shape
    		android:shape="rectangle">
            <gradient
                android:type="linear"
                android:centerX="0.5"
                android:centerY="0.2"
                android:startColor="@color/white"
                android:centerColor="@color/darkgray"
                android:endColor="@color/black"
                android:gradientRadius="10"
                android:angle="270" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>  
    
    <item android:state_pressed="true"
        android:drawable="@color/black" >
    	<shape
    		android:shape="rectangle">
            <gradient
                android:type="linear"
                android:centerX="0.5"
                android:centerY="0.8"
                android:startColor="@color/white"
                android:centerColor="@color/emeraldblue"
                android:endColor="@color/white"
                android:gradientRadius="10"
                android:angle="270" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>  
    
</selector>
    